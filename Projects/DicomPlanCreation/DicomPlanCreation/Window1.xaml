<Window x:Class="DicomPlanCreation.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DicomPlanCreation"
        mc:Ignorable="d"
        Title="DeviationFind" Height="400" Width="500"
        Loaded="Window_Loaded">
    <Grid>
        <TextBlock>Open a file for the deviations for each field.</TextBlock>
        <ScrollViewer Margin="20" HorizontalAlignment="Center" VerticalAlignment="Top" Width="450" Height="300">
            <StackPanel Name="field_files" Margin="0"></StackPanel>
        </ScrollViewer>
        <Button Name="loadDev_btn" Width="150" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="loadDev_btn_Click"  Margin="0,0,10,10">Load all files</Button>
        

    </Grid>
</Window>
